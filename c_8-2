#2023-04-27 8주차 c언어 수업
2주차 예제
```
#include <stdio.h>

int main(void) {
  int x = 20;
  int y = 10;
  int sum, diff, mul, div;

  sum = x + y;
  diff = x - y;
  mul = x * y;
  div = x / y;

  printf("두수의 합:%d\n",sum);
  printf("두수의 차:%d\n",diff);
  printf("두수의 곱:%d\n",mul);
  printf("두수의 몫:%d\n",div);

  return 0;
}
```
#include <stdio.h>

int main(void) {
int a, b, sum;
  printf("첫번째 숫자를 입력하시오: \n");
  scanf("%d", &a);
  printf("두번째 숫자를 입력하시오: \n");
  scanf("%d", &b);

  sum = a + b;
  printf("두수의 합: %d", sum);

  return 0;
}
```
#include <stdio.h>

int main(void) {
double r, area;

  printf("반지름을 입력하시오: ");
  scanf("%lf", &r);

  area = r * r * 3.14;
  printf("원의 면적: %lf", area);

  return 0;
}
```
#include <stdio.h>

int main(void) {
  double rate;
  double usd;
  int krw;

  printf("환율을 입력하시오: ");
  scanf("%lf", &rate);
  printf("원화 금액을 입력하시오: ");
  scanf("%d", &krw);

  usd = krw / rate;

  printf("원화 %d원은 %lf달러입니다.", krw , usd);
  return 0;
}
```
#include <stdio.h>

int main(void) {
  double x, y, z;
  double sum, avg;

  printf("3개의 실수를 입력하시오: ");
  scanf("%lf %lf %lf", &x ,&y, &z);

  sum = x + y + z;
  avg = sum / 3;

  printf("합계: %.2lf\n", sum);
  printf("평균: %.2lf\n", avg);
  return 0;
}
```
#include <stdio.h>

int main(void) {
  double w, h, area, perimeter;

  w = 10.0;
  h = 5.0;
  area = w * h;
  perimeter = 2 * (w + h);

  printf("사각형의 넓이: %lf\n", area);
  printf("사각형의 둘레: %lf\n", perimeter);
  return 0;
}
```
